|    \\/     Manipulation   |                                                 |
\*---------------------------------------------------------------------------*/
FoamFile
{
    version     2.0;
    format      ascii;
    class       volVectorField;
    object      U;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

dimensions      [0 1 -1 0 0 0 0];

internalField   uniform (0 0 0);

boundaryField
{
    inlet
    {
        type            codedFixedValue;
        value           uniform (0 0 0);   // dummy
        name            turbulentInletProfile;

        code
        #{
            const fvPatch& boundaryPatch = patch();
            const vectorField& Cf = boundaryPatch.Cf();

            scalar H    = 0.046;     // [m] channel height (y)
            scalar W    = 0.046;     // [m] channel depth  (z)
            scalar yC   = 0.0;       // [m] channel center in y
            scalar zC   = 0.023;       // [m] channel center in z
            scalar Umax = 37.9548;   // [m/s] centerline velocity
            scalar n    = 9.7;       // power-law exponent

            vectorField& field = *this;

            forAll(Cf, i)
            {
                scalar etaY = 2.0*mag(Cf[i].y() - yC)/H;
                scalar etaZ = 2.0*mag(Cf[i].z() - zC)/W;

                scalar aY = max(0.0, 1.0 - etaY);
                scalar aZ = max(0.0, 1.0 - etaZ);

                scalar u = Umax * pow(aY*aZ, 1.0/n);

                field[i] = vector(u, 0.0, 0.0);
            }
        #};
    }

    topwall
    {
        type            noSlip;
    }

    bottomwall
    {
        type            noSlip;
    }

    leftwall
    {
        type            noSlip;
    }

    rightwall
    {
        type            noSlip;
    }

    cylinder
    {
        type            noSlip;
    }

    outlet
    {
        type            zeroGradient;
    }
}

// ************************************************************************* //
